{
    "name": "typo3/flow-base-distribution",
    "description" : "TYPO3 Flow Base Distribution",
    "license": "LGPL-3.0+",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "typo3/flow": "dev-master",
        "typo3/fluid": "@dev",
        "typo3/party": "@dev",
        "typo3/eel": "@dev",
        "doctrine/migrations": "@dev",
        "typo3/twitter-bootstrap": "dev-master",
        "typo3/swiftmailer": "dev-master",
        "typo3/ldap": "dev-master",
        "chantrea/training": "dev-master"
    },
    "require-dev": {
        "typo3/kickstart": "dev-master",
        "typo3/buildessentials": "dev-master",
        "mikey179/vfsstream": "1.1.*"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall"
    }
}
